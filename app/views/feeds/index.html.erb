<p id="notice"><%= notice %></p>

<h1>Feeds</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Picture</th>
      <th scope="col">Content</th>
      <th scope="col">User name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= image_tag(feed.picture.url, width: '350') %></td>
        <td><%= feed.content %></td>
        <td><%= feed.user.name %></td>
        <% if feed.user_id == current_user.id %>
          <td><%= link_to 'Show', feed, class: "btn btn-outline-info" %></td>
          <td><%= link_to 'Edit', edit_feed_path(feed), class: "btn btn-outline-info" %></td>
          <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-info" %></td>
        <% else %>
          <td><%= link_to 'Show', feed, class: "btn btn-outline-info" %></td>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Feed', new_feed_path, class: "mt-5 btn btn-primary btn-lg"  %>
