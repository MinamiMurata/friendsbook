<h1>投稿内容</h1>
<p>
  <strong>Picture:</strong>
  <%= image_tag(@feed.picture.url, width: '350') if @feed.picture && @feed.picture.url %>
</p>

<p class="mt-3">
  <strong>Content:</strong>
  <%= @feed.content %>
</p>

<% if @feed.user_id == current_user.id %>
  <%= link_to 'Edit', edit_feed_path(@feed), class: "btn btn-outline-info" %>
  <%= link_to 'Back', feeds_path, class: "btn btn-outline-info"  %>
<% else %>
  <%= link_to 'Back', feeds_path, class: "btn btn-outline-info"  %>
<% end %>